<html>
  <head>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <title>Meeting scheduler</title>

    <script type="text/javascript">
      $(document).ready(function () {
          $("#meetingForm").submit(function (event) {
              event.preventDefault();
              $.get(
                  $(this).attr("action"),
                  $(this).serialize(),
                  function (response) {
                      $("#result").val(response)
                  }
              )
          })
      });
    </script>
    <style>
      .column {
        float: left;
        width: 48%;
        padding: 10px;
      }

      .row:after {
        content: "";
        display: table;
        clear: both;
      }

      .columnContent {
        width: 100%;
      }
      .columnContent textarea {
        width: 100%;
        height: 500px;
      }
    </style>
  </head>
  <body>
    <div class="row">
      <div class="column">
        <form method="get" action="/schedule" id="meetingForm" class="columnContent">
          <label>
            Your meetings
            <textarea name="raw_meetings"></textarea>
          </label>
          <input type="submit">
        </form>
      </div>
      <div class="column">
        <div class="columnContent">
          Result
          <textarea id="result" readonly="readonly"></textarea>
        </div>
      </div>
    </div>
  </body>
</html>
